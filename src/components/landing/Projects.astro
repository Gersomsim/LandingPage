---
import projects from  "../../config/projects.json"
---
<h2
  class="text-5xl font-bold my-8 text-center"
>Projects
</h2>
{
  projects.map(project => (
    <div class="flex text-center md:text-left">
      <div class="flex-1">
        <h2 class="font-bold text-2xl my4">{project.title}</h2>
        <p class="my-2">{project.description}</p>
        <button class="bg-indigo-500 px-3 py-3 hover:indigo-300">
          More info
          </button>
      </div>
      <div class="flex-1">
        <img src={project.image} alt="" class="w-72">
      </div>
    </div>
  ))
}
