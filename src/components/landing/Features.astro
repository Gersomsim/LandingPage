---
import feactures from "../../config/feacture.json";
---
<h1 class="text-center font-bold text-5xl mt-10">Feactures</h1>
<div class="grid md:grid-cols-3 gap-4 p-4">

  {
    feactures.map(feacture => (
      <div class="bg-slate-800 p-10 rounded-xl">
        <h2 class="text-2xl font-bold my-4">{feacture.title}</h2>
        <p>{feacture.Description}</p>
      </div>
    ))
  }
</div>

